<!DOCTYPE html>
<html>
<head>
  <title>  Calendar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Quicksand:400,700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Satisfy' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Julius+Sans+One' rel='stylesheet' type='text/css'>
</head>
<body>
  <% if !@current_user.nil? %>
      <div class="col-lg-1 col-xs-3 col-sm-offset-3 col-lg-offset-0 nav-link-container">
        <%= link_to "LOGOUT", logout_path, method: :delete, class: "nav-link" %>
      </div>
      <div class="col-lg-1 col-xs-3 nav-link-container">
        <%= link_to "DASHBOARD", user_path(@current_user.id), class: "nav-link" %>
      </div>
    <% else %>
      <div class="col-lg-1 col-xs-3 col-sm-offset-3 col-lg-offset-0 nav-link-container">
        <%= link_to "LOGIN", new_session_path, class: "nav-link" %>
      </div>
      <div class="col-lg-1 col-xs-3 nav-link-container">
        <%= link_to "SIGN UP", new_user_path, class: "nav-link" %>
      </div>
    <% end %>
<%= yield %>

</body>
</html>
