<h1><%= @user.name %>'s calendar</h1>

<div class="row">
  <div class="col-md-12 text-center">
    <div class="well controls">
      <%= link_to calendar_path(date: @date - 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-backward"></i>
      <% end %>
      <%= "#{@date.strftime("%B")} #{@date.year}" %>
      <%= link_to calendar_path(date: @date + 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-forward"></i>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= calendar @date do |date| %>
      <%= date.day %>
      <ul>
        <% @events.each do |event| %>
          <% if event.event_date.day == date.day && event.event_date.month == date.month %>
            <li><%= event.name %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<% @events.each do |event| %>
  <div>
    <%= link_to event.name, user_event_path(:user_id => @user.id, :id => event.id) %>
    <%= link_to "edit", edit_user_event_path(:user_id => @user.id, :id => event.id) %>
    <%= link_to "delete", user_event_path(:user_id => @user.id, :id => event.id), method: :delete %>
  </div>
<% end %>
<%= link_to "+ event", new_user_event_path(:user_id => @user.id) %>
