<div class="row">
  <div class="col-md-12 text-center">
    <div class="well controls">
      <%= link_to user_events_path(user_id: params[:user_id], date: @date - 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-backward">previous</i>
      <% end %>
      <%= "#{@date.strftime("%B")} #{@date.year}" %>
      <%= link_to user_events_path(user_id: params[:user_id], date: @date + 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-forward">next</i>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= calendar @date do |date| %>
      <%= date.day %>
    <% end %>
  </div>
</div>
