
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-5 control-label text-right" %>
    <div class="col-md-7">
      <%= f.text_field :name, class: "user-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :bio, class: "col-md-5 control-label text-right"%>
    <div class="col-md-7">
        <%= f.text_field :bio, class: "user-field" %>
    </div>
  </div>

  <div class="form-actions">
      <%= f.submit "submit", class: "submit-button" %>
  </div>
<% end %>
