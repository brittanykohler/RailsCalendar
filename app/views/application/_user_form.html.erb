<div class="col-md-12 text-center error-message">
<% if !flash.now[:error].nil? || !flash[:error].nil? %>
  <%= flash.now[:error] %>
<% else %>
  <%= flash[:error] %>
<% end %>
</div>

<!-- <h3 class="text-center">Sign up to create a new calendar</h3> -->

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-5 control-label text-right" %>
    <div class="col-md-7">
      <%= f.text_field :name, class: "user-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :bio, class: "col-md-5 control-label text-right"%>
    <div class="col-md-7">
        <%= f.text_field :bio, class: "user-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-md-5 control-label text-right"%>
    <div class="col-md-7">
        <%= f.password_field :password, class: "user-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", class: "col-md-5 control-label text-right"%>
    <div class="col-md-7">
        <%= f.password_field :password_confirmation, class: "user-field" %>
    </div>
  </div>

  <div class="form-actions">
      <%= f.submit "submit", class: "submit-button" %>
  </div>
<% end %>
