<%= form_for :event, url:url, method: method do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "col-md-5 control-label text-right" %>
    <div class="col-md-7">
      <%= f.text_field :name, class: "event-field" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-5 control-label text-right" %>
    <div class="col-md-7">
        <%= f.text_field :description, class: "event-field" %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :event_date, class: "col-md-5 control-label text-right" %>
      <div class="col-md-7">
        <%= f.datetime_select :event_date, start_year: 2015, end_year: 2016, prompt: {day: 'Choose day', month: 'Choose month', year: 'Choose year'}, ampm: true %>
      </div>
  </div>

  <%= hidden_field_tag :user_id, params[:user_id] %>

  <div class="row">
    <div class="col-md-12">
      <div class="form-actions">
          <%= f.submit "SUBMIT", class: "submit-button-event" %>
      </div>
    </div>
  </div>

<% end %>
